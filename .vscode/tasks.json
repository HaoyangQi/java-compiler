{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "release build",
            "command": "cl.exe",
            "args": [
                "/MT", // remove unecessary dynamic MSVC dependencies
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\build\\release\\${workspaceFolderBasename}.exe",
                "/Fo${workspaceFolder}\\build\\release\\obj\\",
                "/Fd${workspaceFolder}\\build\\release\\pdb\\",
                "/ILK:${workspaceFolder}\\build\\release\\ilk\\",
                "${workspaceFolder}\\**.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "debug build",
            "command": "cl.exe",
            "args": [
                "/DDEBUG",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\build\\debug\\${workspaceFolderBasename}.exe",
                "/Fo${workspaceFolder}\\build\\debug\\",
                "/Fd${workspaceFolder}\\build\\debug\\",
                "/ILK:${workspaceFolder}\\build\\debug\\",
                "${workspaceFolder}\\**.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}