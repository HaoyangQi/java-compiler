{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/MT", // remove unecessary dynamic MSVC dependencies
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\build\\${workspaceFolderBasename}.exe",
                "/Fo${workspaceFolder}\\obj\\",
                "/Fd${workspaceFolder}\\pdb\\",
                "/ILK:${workspaceFolder}\\ilk\\",
                "${workspaceFolder}\\**.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}